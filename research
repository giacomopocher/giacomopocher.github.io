    <script>
        function toggleAbstract(id) {
            var abstract = document.getElementById(id);
            if (abstract.style.display === "none") {
                abstract.style.display = "block";  // Show abstract
            } else {
                abstract.style.display = "none";  // Hide abstract
            }
        }
    </script>
